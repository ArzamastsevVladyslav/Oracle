[
	{
		"lowerTab": "Connection",
		"structure": [
			{
				"inputLabel": "Name",
				"inputKeyword": "name",
				"inputType": "text",
				"inputPlaceholder": "Name"
			},
			{
				"inputLabel": "Client type",
				"inputKeyword": "clientType",
				"inputType": "select",
				"defaultValue": "Host / Port",
				"options": [
					{ "value": "OracleHome", "label": "Oracle Home" },
					{ "value": "InstantClient", "label": "Instant Client" }
				]
			},
			{
				"inputLabel": "Client location",
				"inputKeyword": "clientPath",
				"inputType": "text",
				"inputPlaceholder": "Client path",
				"dependency": {
					"key": "clientType",
					"value": "InstantClient"
				}
			},
			{
				"inputLabel": "Connection method",
				"inputKeyword": "connectionMethod",
				"inputType": "select",
				"defaultValue": "Basic",
				"options": [
					{ "value": "Basic", "label": "Basic" },
					{ "value": "Wallet", "label": "Cloud Wallet" },
				    { "value": "TNS", "label": "TNS" }
				]
			},
			{
				"inputLabel": "Hostname",
				"inputKeyword": "host",
				"description": "Specify the host IP address or DNS name of Oracle server",
				"inputType": "text",
				"dependency": {
					"key": "connectionMethod",
					"value": "Basic"
				},
				"regex": "([^\\s])"
			},
			{
				"inputLabel": "Port",
				"inputKeyword": "port",
				"description": "Specify the port number of Oracle server",
				"inputType": "numeric",
				"defaultValue": 1521,
				"dependency": {
					"key": "connectionMethod",
					"value": "Basic"
				}
			},
			{
				"inputLabel": "Wallet file",
				"inputKeyword": "walletFile",
				"description": "Specify the full path location and name of the wallet zip file",
				"inputType": "text",
				"dependency": {
					"key": "connectionMethod",
					"value": [
						"Wallet"
					]
				}
			},
			{
				"inputLabel": "Tnsnames Directory",
				"inputKeyword": "TNSpath",
				"description": "Specify the full path to directory with tnsnames.ora file",
				"inputType": "file",
				"openType": "openDirectory",
				"dependency": {
					"key": "connectionMethod",
					"value": [
						"TNS"
					]
				}
			},
			{
				"inputLabel": "Service Name",
				"inputKeyword": "serviceName",
				"description": "Specify the service name of the Oracle Instance",
				"inputType": "text",
				"dependency": {
					"key": "connectionMethod",
					"value": [
						"Basic",
						"Wallet",
						"TNS"
					]
				}
			}
		]
	},
	{
		"tab": "Authentication",
		"structure": [
			{
				"inputLabel": "Authentication method",
				"inputKeyword": "authMethod",
				"inputType": "select",
				"defaultValue": "Username / Password",
				"options": [
					{ "value": "Username / Password", "label": "Username / Password" },
					{ "value": "OS", "label": "OS" },
					{ "value": "Kerberos", "label": "Kerberos" },
				]
			},
			{
				"inputLabel": "User Name",
				"inputKeyword": "userName",
				"inputType": "text",
				"inputPlaceholder": "User Name",
				"dependency": {
					"key": "authMethod",
					"value": [
						"Username / Password",
						"Kerberos"
					]
				},
				"validation": {
					"regex": "([^\\s])"
				}
			},
			{
				"inputLabel": "Password",
				"inputKeyword": "userPassword",
				"inputType": "password",
				"inputPlaceholder": "Password",
				"dependency": {
					"key": "authMethod",
					"value": [
						"Username / Password",
						"Kerberos"
					]
				},
				"isHiddenKey": true,
				"validation": {
					"regex": "([^\\s])"
				}
			}
		]
	},
	{
		"tab": "Advanced",
		"structure": [
			{
				"inputLabel": "Database name",
				"inputKeyword": "databaseName",
				"description": "Database name",
				"inputType": "text",
				"inputPlaceholder": "Database name",
				"description": "Optionally specify a database name to limit the scope of discovery",
				"regex": "([^\\s])"
			}
		]
	}
]